{
  "openapi": "3.0.3",
  "info": { "title": "Payouts API v2", "version": "2.0.0" },
  "paths": {
    "/api/v2/payouts/batch": {
      "post": {
        "summary": "Create batch payouts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "account": { "type": "string" },
                        "amount": { "type": "number" },
                        "currency": { "type": "string" }
                      },
                      "required": ["account", "amount", "currency"]
                    },
                    "minItems": 1,
                    "maxItems": 1000
                  },
                  "callback": { "type": "string", "format": "uri" }
                },
                "required": ["items", "callback"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "429": { "description": "Rate Limited" },
          "500": { "description": "Provider Error" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": { "BearerAuth": { "type": "http", "scheme": "bearer" } }
  },
  "security": [ { "BearerAuth": [] } ]
}